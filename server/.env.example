# Backend environment template. Copy to `server/.env` and adjust.

APP_NAME=PrivetSuperApp
ENV=dev
DATABASE_URL=postgresql+psycopg://privet:privet@localhost:5432/privetdb
SECRET_KEY=change_me_backend_secret
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Master contour (login for master portal)
MASTER_SECRET_KEY=change_me_master_secret
MASTER_ACCESS_MIN=120

# CORS
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:5174

# Optional mail settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=mailer@example.com
SMTP_PASSWORD=change_me_mail_password
SMTP_TLS=true
SMTP_SSL=false
SMTP_FROM=mailer@example.com
SMTP_FROM_NAME=PrivetSuper

# Public base URL for links in emails
APP_BASE_URL=https://app.privetsuper.ru

# Object storage (optional)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=privet-bucket

# Logging
LOG_LEVEL=INFO
